{
  "name": "igniphp/framework",
  "description": "PSR-7, PSR-15 modular micro framework.",
  "keywords": [
    "http",
    "psr-7",
    "psr-15",
    "middleware",
    "framework"
  ],
  "support": {
    "issues": "https://github.com/igniphp/framework/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Dawid <krac> Kraczkowski",
      "email": "dawid.kraczkowski@gmail.com"
    }
  ],
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse src --level=0",
    "coverage": "vendor/bin/phpunit --coverage-html ../coverage"
  },
  "require": {
    "igniphp/container": ">=1.1.0",
    "igniphp/exception": "^1.0",
    "nikic/fast-route": "1.0",
    "php": ">=7.1.0",
    "psr/container": ">=1.0",
    "psr/http-message": ">=1.0",
    "psr/log": ">=1.0",
    "psr/simple-cache": ">=1.0",
    "zendframework/zend-diactoros": ">=1.7",
    "zendframework/zend-stratigility": ">=3.0.0"
  },
  "suggest": {
    "ext-swoole": "for build in http server support."
  },
  "require-dev": {
    "mockery/mockery": ">=1.0.0",
    "league/container": ">=1.0.0",
    "phpunit/phpunit": ">=7.0.0",
    "phpstan/phpstan": ">=0.9.2"
  },
  "autoload": {
    "psr-4": {
      "Igni\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IgniTest\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
